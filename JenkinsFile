pipeline { 
    agent { label 'master' }
    stages {
        stage('Execute') { 
            steps { 
                sh '''#!/bin/bash
                    echo "Triggered! Beginning run." 
                    sleep 10
                    tar -zcvf poc_repo.tgz *
                    ls -lia
                '''
            }
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: 'poc_repo.tgz', fingerprint: true
        }
    }    
}
