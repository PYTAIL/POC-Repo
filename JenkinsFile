pipeline { 
    agent { label 'master' }
    stages {
        stage('Execute') { 
            steps { 
                sh '''#!/bin/bash
                    echo "Triggered! Beginning run." 
                    sleep 10
                    tar -cvf poc_repo.tar *
                    ls -lia
                '''
            }
            steps {
                build 'GateJob'	//this is where we specify which job to invoke.
            }            
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: 'poc_repo.tar', fingerprint: true
        }
    } 
}
