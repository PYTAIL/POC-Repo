pipeline { 
    agent { label 'master' }
    stages {
        stage('Report') { 
            steps { 
                sh '''#!/bin/bash
                    echo "Triggered! Beginning run." 
                    sleep 10
                '''
            }
        }
        stage('List'){
            steps {
                sh '''#!/bin/bash
                    ls -lia
                '''
            }
        }
        stage('REAME'){
            steps {
                sh '''#!/bin/bash
                    cat README.md
                '''
            }
        }
        stage('Archive') {
            steps {
                sh '''#!/bin/bash
                    tar -zcvf poc_repo.tgz *
                    echo "========"
                    ls -liat
                    echo "========"
                    pwd
                    sleep 10
                '''
                archiveArtifacts: 'poc_repo.tgz'
            }
        }
    }
}
