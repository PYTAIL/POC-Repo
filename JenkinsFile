pipeline { 
    agent { label 'master' }
    stages {
        stage('Execute') { 
            steps { 
                sh '''#!/bin/bash
                    echo "Triggered! Beginning run." 
                    # sleep 10
                    mkdir -p output
                    tar -cvf output/poc_repo.tar *
                    ls -lia
                '''
            }
        }
        stage('Execute2') { 
            steps {
                build 'GateJob'	//this is where we specify which job to invoke.
            }            
        }        
    }
    
    post {
        always {
            archiveArtifacts artifacts: 'output/poc_repo.tar', fingerprint: true
        }
    } 
}
